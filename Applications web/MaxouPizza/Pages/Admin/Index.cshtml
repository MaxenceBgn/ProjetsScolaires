@page
@model MaxouPizza.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Authentification au panel d'administration";
}

<h1>@ViewData["Title"]</h1>
<br />
@{
    if(Model.identifiantsAreNotOk == true)
    {
        <div class="alert alert-danger" role="alert">
            Nom d'utilisateur et/ou mot de passe incorrect(s)
        </div>
        Model.identifiantsAreNotOk = false;
    }
}

<br />

<form method="post">
    <input type="text" name="username" placeholder="Login"><br />
 <input type="password" name="password" placeholder="Mot de passe">
 <button>Se connecter</button>
</form>